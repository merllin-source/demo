<script>
  //js监听变量变化
var app={html:''}
function render(value){
document.getElementById('app').innerHTML=value
}
Object.defineProperty(app,'html',{
  set:function(value){
   render(value)    
  }  
})
app.html='<p>123</p>'
app.html='<p>123456789</p>'
var A=''
function listenA(x){
  A=x
 document.getElementById('app1').innerHTML=A  
}
listenA(234)
</script>
